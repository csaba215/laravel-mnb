  "description": "Laravel MNB (Magyar Nemzeti Bank)",
  "keywords": [
    "mnb",
    "magyar",
    "nemzeti",
    "bank",
    "currency",
    "exchange",
    "rate",
    "laravel",
    "package"
  ],
  "authors": [
    {
      "name": "Forg√°cs Bence",
      "email": "sykorax93@gmail.com"
    },
    {
      "name": "Szobonya Csaba",
      "email": "opensource@szobonya.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/support": "11.* | 12.*",
    "illuminate/cache" : "11.* | 12.*",
    "ext-soap": "*",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "larastan/larastan": "^3.0",
    "laravel/pint": "^1.22",
    "mockery/mockery": "^1.6.10",
    "orchestra/testbench": "^10.2.1",
    "phpunit/phpunit": "^11.5.3|^12.0.1"
  },
  "autoload": {
    "files": [
    ],
    "psr-4": {
      "Csaba215\\Mnb\\Laravel\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Csaba215\\Mnb\\Laravel\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Csaba215\\Mnb\\Laravel\\MnbServiceProvider"
      ]
    }
  }
}
